<Window x:Class="Arkanoid.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="Arkanoid" Height="750" Width="800">
    
    <Grid HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="10" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Rectangle Grid.Row="0" Fill="DimGray"></Rectangle>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="10"/>
            </Grid.ColumnDefinitions>
            
            <Rectangle Grid.Column="0" Fill="DimGray"></Rectangle>
            <Rectangle Grid.Column="2" Fill="DimGray"></Rectangle>
            
            
            <Canvas Grid.Column="1" Name="Canvas" Background="Linen">
                <Rectangle Name="Platform" Width="100" Height="20" Fill="Black" Canvas.Left="350" Canvas.Bottom="10"/>
                <Ellipse Name="Ball" Width="20" Height="20" Fill="Red" Canvas.Left="430" Canvas.Bottom="40" />
            </Canvas>
        </Grid>
    </Grid>
    
</Window>
